class Solution {
public:
    int searchInsert(vector<int>& nums, int target) {
        int s = 0, e = nums.size()-1;
        int mid = s+(e-s)/2;

        while(e >= s)
        {
            if(target > nums[mid])
            {
                s = mid+1;
            }
            else if(target == nums[mid])
            {
                return mid;
            }
            else
            {
                e = mid-1;
            }
            mid = s+(e-s)/2;
        }
        return mid;
    }
};
